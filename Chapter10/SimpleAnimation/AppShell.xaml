<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SimpleAnimation.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:SimpleAnimation.Views"
    xmlns:local="clr-namespace:SimpleAnimation"
    xmlns:android="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.AndroidSpecific;assembly=Microsoft.Maui.Controls"
    android:TabbedPage.ToolbarPlacement="Bottom"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
    <Tab Title="Simple"
         Icon="tree.png">
        <ShellContent ContentTemplate="{DataTemplate views:SimplePage}" />
    </Tab>
    <Tab Title="Compound"
         Icon="trees.png">
        <ShellContent ContentTemplate="{DataTemplate views:CompoundPage}" />
    </Tab>
        <Tab Title="Easing"
             Icon="apple.png">
            <ShellContent ContentTemplate="{DataTemplate views:EasingPage}" />
        </Tab>
    </TabBar>

</Shell>
