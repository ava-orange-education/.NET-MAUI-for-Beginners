<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SimpleAnimation.Views.Views"
             x:Class="SimpleAnimation.Views.SimplePage">
    <VerticalStackLayout Padding="8" VerticalOptions="Start">
        <HorizontalStackLayout Padding="8,0">
            <Label Text="Select animation" VerticalTextAlignment="Center" />
            <Picker ItemsSource="{Binding Options}" Title="Animation option" SelectedIndexChanged="Picker_OnSelectedIndexChanged" />
        </HorizontalStackLayout>
        <ContentView x:Name="selectedView" VerticalOptions="Center" HorizontalOptions="Center" Padding="20" />
    </VerticalStackLayout>
</ContentPage>